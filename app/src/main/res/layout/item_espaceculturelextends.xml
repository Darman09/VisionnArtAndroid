<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="1dp">

    <ImageView
            android:layout_width="0dp"
            android:id="@+id/Photoextends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:layout_height="180dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:textColor="@color/colorBlanc"
            android:shadowColor="@color/colorNoir"
            android:id="@+id/textNameextends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            tools:text="Reso Coder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"/>

    <TextView
            android:textColor="@color/colorBlanc"
            android:shadowColor="@color/colorNoir"
            android:id="@+id/textDescriptionextends"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Reso Coder"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:maxLines="3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textNameextends"/>


</androidx.constraintlayout.widget.ConstraintLayout>