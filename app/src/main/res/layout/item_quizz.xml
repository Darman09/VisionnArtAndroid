<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
>
    <TextView
            android:id="@+id/quizzText"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            tools:text="Nom Quizz"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorNoir"
            android:shadowColor="@color/colorNoir"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/quizzDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="DifficultÃ©e"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/quizzText"

            android:fontFamily="sans-serif-light"
            android:textSize="12sp"
            android:textColor="@color/colorNoir"
            android:shadowColor="@color/colorNoir"/>


</LinearLayout>