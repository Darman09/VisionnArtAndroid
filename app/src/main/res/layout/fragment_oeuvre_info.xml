<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            tools:context=".fragments.OeuvreInfoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RatingBar
                android:id="@+id/notation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:maxHeight="50dp"
                android:minHeight="28dp"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="1.0"
                android:scrollbarStyle="insideOverlay"
                android:theme="@style/RatingBar"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photoconstraintOeuvre"
                android:layout_marginTop="20dp"/>

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_validation"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/validationanim"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btnRating"
                app:layout_constraintStart_toEndOf="@+id/notation"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.578"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/photoconstraintOeuvre"/>

        <Button android:id="@+id/btnRating"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundbutton"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Valider"
                app:layout_constraintBottom_toTopOf="@+id/infoOeuvreExposition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photoconstraintOeuvre"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/frameLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/navigation_bg">

            <ImageView
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"
                    android:layout_width="48dp"
                    android:layout_height="49dp"
                    android:id="@+id/OeuvreBackToList"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvreName"
                android:textColor="@color/colorNoir"
                android:textSize="24sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textAllCaps="true"
                app:layout_constraintHorizontal_bias="0.0"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/photoconstraintOeuvre"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:id="@+id/PhotoOeuvre"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvreExposition"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                android:textAlignment="viewStart"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/notation"
                android:layout_marginTop="15dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvrepropriétaire"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreExposition"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvreType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorNoir"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvrepropriétaire"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoNomAuteurOeuvre"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:textColor="@color/colorNoir"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreType"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvreDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoNomAuteurOeuvre"/>


        <TextView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:id="@+id/infoOeuvreDateDebut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreDescription"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/infoOeuvreDateFin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreDateDebut"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/urlWikipedia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textColor="@color/colorNoir"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoOeuvreDateFin"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/img"
                   app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>